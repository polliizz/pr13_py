старий_файл = input("Назва файлу: ")
try:
    with open(старий_файл, "r", encoding="utf-8") as f:
        текст = f.read()
    пошук = input("Введіть слово : ")
    заміна = input("Введіть слово : ")
    новий_текст = текст.replace(пошук, заміна)
    новий_файл = input("Назва нового файлу : ")
    with open(новий_файл, "w", encoding="utf-8") as f:
        f.write(новий_текст)
    print(f"міни збережено '{новий_файл}'.")
except FileNotFoundError:
    print("Файл не знайдено")
