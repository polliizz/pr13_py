filename = input("Назва нового файлу: ")
print("Введіть текст:")
lines = []
while True:
    line = input()
    if line == "":
        break
    lines.append(line)
with open(filename, "w", encoding="utf-8") as file:
    file.write("\n".join(lines))
print(f" Файл '{filename}' збережено,вміст:")
with open(filename, "r", encoding="utf-8") as file:
    print(file.read())
